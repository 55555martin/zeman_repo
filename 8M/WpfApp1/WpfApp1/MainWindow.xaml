<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="WpfApp1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.DataContext>
            <System:Int32/>
        </Grid.DataContext>
        <Label x:Name="HexCode" Content="Label" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="442,375,0,0" VerticalAlignment="Top" Width="183" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Rectangle x:Name="colorRect" HorizontalAlignment="Left" Height="350" Margin="56,49,0,0" Stroke="Black" VerticalAlignment="Top" Width="254" Grid.ColumnSpan="2"/>
        <Label Content="RGB míchátko" HorizontalAlignment="Left" Margin="338,33,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="50" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,105,0,0" TextWrapping="Wrap" Text="Red" VerticalAlignment="Top" Background="Red" Height="27" Width="48" FontSize="15" TextAlignment="Center" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,190,0,0" TextWrapping="Wrap" Text="Green" VerticalAlignment="Top" Background="Lime" Height="27" Width="48" FontSize="15" TextAlignment="Center" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,286,0,0" TextWrapping="Wrap" Text="Blue" VerticalAlignment="Top" Background="Blue" Height="27" Width="48" FontSize="15" TextAlignment="Center" Foreground="White" Grid.Column="1"/>
        <Slider x:Name="sliderRed" HorizontalAlignment="Left" Margin="376,151,0,0" VerticalAlignment="Top" Width="300" Height="30" FontSize="30" Maximum="255" SmallChange="1" Value="255" Cursor="Hand" RenderTransformOrigin="0.5,0.5" ValueChanged="sliderRed_ValueChanged" Grid.ColumnSpan="2">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.25"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="sliderGreen" HorizontalAlignment="Left" Margin="376,247,0,0" VerticalAlignment="Top" Width="300" Height="30" FontSize="30" Maximum="255" SmallChange="1" Value="255" Cursor="Hand" RenderTransformOrigin="0.5,0.5" ValueChanged="sliderGreen_ValueChanged" Grid.ColumnSpan="2">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.25"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="sliderBlue" HorizontalAlignment="Left" Margin="376,336,0,0" VerticalAlignment="Top" Width="300" Height="30" FontSize="30" Maximum="255" SmallChange="1" Value="255" Cursor="Hand" RenderTransformOrigin="0.5,0.5" ValueChanged="sliderBlue_ValueChanged" Grid.ColumnSpan="2">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.25"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBox x:Name="txtRed" HorizontalAlignment="Left" Margin="442,108,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="120" FontSize="15" TextChanged="txtRed_TextChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtGreen" HorizontalAlignment="Left" Margin="442,193,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="120" FontSize="15" TextChanged="txtGreen_TextChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtBlue" HorizontalAlignment="Left" Margin="442,289,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="120" FontSize="15" TextChanged="txtBlue_TextChanged" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
