<Window x:Class="malovani.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:malovani"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="DrawingCanvas" Grid.Row="2" MouseMove="DrawingCanvas_MouseMove" MouseDown="DrawingCanvas_MouseDown" MouseUp="DrawingCanvas_MouseUp" Background="White"/>
        <Menu>
            <MenuItem Header="Soubor">
                <MenuItem Header="Otevřít" Click="Open_file"></MenuItem>
                <MenuItem Header="Uložit" Click="Save_file"></MenuItem>
            </MenuItem>
            <MenuItem Header="Upravit"></MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="White">
            <Image Margin="10" Height="30" Width="30" Source="/stetec.png"/>
            <Label VerticalAlignment="Center" Content="Tloušťka štětce:" ></Label>
            <Slider x:Name="BrushRadius" Margin="10" VerticalAlignment="Center" Width="150" Minimum="1" Maximum="50" LargeChange="0" Value="1"/>
            <Label Margin="10" VerticalAlignment="Center" Content="Barva:" ></Label>
            <Button x:Name="ColorButton" Width="30" Height="30" Background="black" Click="Button_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Background="White">
            <Label VerticalAlignment="Center" Content="0%" ></Label>
            <Slider VerticalAlignment="Center" Width="150"/>
            <Label VerticalAlignment="Center" Content="100%" ></Label>
        </StackPanel>
    </Grid>
</Window>
